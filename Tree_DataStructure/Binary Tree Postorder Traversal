
Input: root = [1,null,2,3]
Output: [3,2,1]


class Solution {
    private:
    void solve(TreeNode* root, vector<int> &ans){
     //base cond
     if(root == NULL){
         return;
     }

     if(root->left){
      solve(root->left, ans);
     }
     if(root->right){
     solve(root->right, ans);
     }
     ans.push_back(root->val);
    }
public:
    vector<int> postorderTraversal(TreeNode* root) {
        vector<int> ans;
        solve(root,ans);
        return ans;
    }
};
